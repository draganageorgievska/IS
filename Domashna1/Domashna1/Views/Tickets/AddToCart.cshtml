@model Domashna1.Domain.DTO.AddToCartDto
@{
    ViewData["Title"] = "AddToCart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AddToCart</h1>
<div>
    <div class="col-md-4">
        <form asp-action="AddToCart" method="post">
            <input type="hidden" asp-for="TicketId" />
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="SelectedTicket.MovieName"></label>
                    <input disabled asp-for="SelectedTicket.MovieName" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <input asp-for="Quantity" type="number" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>

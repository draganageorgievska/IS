@{
}
@model List<AdminApplication.Models.Order>
<div class="container">
        <table class="table">
            <thead>
                <tr>
                    <th class="col">
                        #
                    </th>
                    <th class="col">
                        Customer Name
                    </th>
                    <th class="col">
                        Number of Products
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @{
                    for(int i=0;i<Model.Count;i++)
                    {
                        var item = Model[i];
                                <tr>
                                    <td>@(i+1)</td>
                                    <td>@item.OrderedBy.UserName</td>
                                    <td>@item.TicketsInOrder.Count</td>
                                    <td><a class="btn btn-info" asp-route-id="@item.Id" asp-action="Details">View Order</a></td>
                                    <td><a class="btn btn-outline-secondary" asp-action="CreateInvoice" asp-route-id="@item.Id">Create Invoice</a></td>
                                </tr>
                    }
                }
            </tbody>
        </table>
</div>
